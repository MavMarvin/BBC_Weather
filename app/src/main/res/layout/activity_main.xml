<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="355dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/regEmailTxt"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" android:hint="E-mail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="348dp"
            android:layout_height="47dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passTxt" android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/regEmailTxt" android:hint="Password"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintTop_toBottomOf="@+id/regEmailTxt"
            android:layout_marginTop="60dp"/>

    <Button
            android:text="Login"
            android:layout_width="231dp"
            android:layout_height="39dp" android:id="@+id/logBut" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"
            android:layout_below="@+id/passTxt"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/passTxt"/>

    <TextView
            android:clickable="true"
            android:text="Forgot Password?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fgtPass" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/logBut" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textColor="@color/colorAccent"/>

    <Button
            android:text="Create Account"
            android:layout_width="347dp"
            android:layout_height="41dp"
            android:id="@+id/accountBut" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Don't have an account?"
            android:layout_width="152dp"
            android:layout_height="24dp"
            android:id="@+id/textView" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/accountBut" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"/>

</androidx.constraintlayout.widget.ConstraintLayout>